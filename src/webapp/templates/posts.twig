{% extends 'base.twig' %}

{% block content %}

    <h2>Posts</h2>

    {% for post in posts %}
        <div class="post">
            <a href="/posts/{{ post.postId }}">{{ post.title}} </a>  by  <a href="/user/{{ post.author|raw }}"> {{ post.author|raw }}</a>. Posted on {{ post.date }} {% if post.doctorAnswered == 1 %} - Answered by a doctor {% endif %}
        </div>
    {% else %}
        There are no posts as of yet
    {% endfor %}

{% endblock %}
