{% extends 'base.twig' %}

{% block content %}

<h1> So you've forgotten your password? </h1>
<h2> Please input your username </h2>
{{ flash.error}}
<div id="feil"> </div>
<form action="" method="POST" onsubmit="return validate()">
    <label>Username: </label>
    <input type="text" name="username"> <br />
    <input type="submit" name="submit" value="Submit">
</form>

<script type="text/javascript">
	
	function validateUserName() {

   		var regex = /^[a-zA-Z0-9]{2,10}/;
        var OK = regex.test(document.getElementById("user").value);
        if(!OK) {
            document.getElementById("feil").innerHTML ="Illegal symbols used. Can not find user.";
            return false;
        }
        return true;

	}

	function validate() {
	var OK = true;
	if(!validateUserName()) {
		OK = false;
	}
	return OK;
	}

 </script>
{% endblock %}